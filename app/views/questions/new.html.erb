</body>
  <%= render "shared/header" %>
  <div class="row align-items-md-stretch justify-content-center">
    <div class="col-md-8">
      <div class="h-100 p-5 text-white bg-dark rounded-3">
      <h2>プロフィール入力</h2>
        <%= form_with model: @question, url: questions_path do |f| %>
          <%= f.label :language %>
          <%= f.text_field :language, class: "form-control", placeholder: "言語を入力してください" %>
          <%= f.label :framework %>
          <%= f.text_field :framework, class: "form-control", placeholder: "フレームワークを入力してください" %>
          <%= f.label :hobby %>
          <%= f.text_field :hobby, class: "form-control", placeholder: "趣味を入力してください" %> 
          <%= f.label :former_job %>
          <%= f.text_field :former_job, class: "form-control", placeholder: "前職を入力してください" %> 
          <%= f.label :desired_engineer %> 
          <%= f.text_field :desired_engineer, class: "form-control", placeholder: "目指すエンジニア像を入力してください" %>

      
      </div>
    </div>
    <div class="col-md-3">
      <div class="h-100 p-5 bg-light border rounded-3">
        <h2>Add borders</h2>
        <p> content for equal-height.</p>
        <%= f.submit "聞く！", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>

  <footer class="text-muted py-5">
    <div class="container">
      <p class="float-end mb-1">
        <a href="#">Back to top</a>
      </p>
      <p class="mb-1">Album example is &copy; Bootstrap, but please download and customize it for yourself!</p>
      <p class="mb-0">New to Bootstrap? <a href="/">Visit the homepage</a> or read our <a href="../getting-started/introduction/">getting started guide</a>.</p>
    </div>
  </footer>

  
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

      
</body>

